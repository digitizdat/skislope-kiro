{
  "name": "alpine-ski-simulator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "cache:clear": "rm -rf node_modules/.vite",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:integration": "vitest run --reporter=verbose src/**/*.integration.test.ts",
    "test:performance": "vitest run --reporter=verbose --logHeapUsage src/**/*.test.ts",
    "test:filter": "vitest run --reporter=verbose",
    "test:all": "npm run test && npm run test:integration",
    "hooks:install": "npx lefthook install",
    "hooks:uninstall": "npx lefthook uninstall",
    "ci:integration": "uv run python scripts/test_integration.py --ci-mode",
    "ci:smoke": "uv run python scripts/deployment_smoke_tests.py",
    "ci:artifacts": "uv run python scripts/collect_test_artifacts.py"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.20",
    "@types/three": "^0.158.0",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "three": "^0.158.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fake-indexeddb": "^6.2.2",
    "jsdom": "^27.0.0",
    "lefthook": "^1.13.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
