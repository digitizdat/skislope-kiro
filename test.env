# Test Environment Configuration
# This file defines environment variables for consistent test execution
# across local development and CI/CD environments

# Core test environment settings
NODE_ENV=test
VITEST=true

# Test execution settings
VITEST_TIMEOUT=10000
VITEST_TEST_TIMEOUT=5000
VITEST_HOOK_TIMEOUT=10000

# Coverage settings
VITEST_COVERAGE_PROVIDER=v8
VITEST_COVERAGE_THRESHOLD_LINES=80
VITEST_COVERAGE_THRESHOLD_FUNCTIONS=80
VITEST_COVERAGE_THRESHOLD_BRANCHES=80
VITEST_COVERAGE_THRESHOLD_STATEMENTS=80

# Performance settings
VITEST_LOG_HEAP_USAGE=true
VITEST_POOL=threads
VITEST_ISOLATE=true

# CI/CD specific settings
CI_TIMEOUT_MULTIPLIER=1.5
CI_RETRY_COUNT=2
CI_PARALLEL_WORKERS=2

# Debug settings
DEBUG_TEST_SETUP=false
DEBUG_MOCK_OPERATIONS=false
DEBUG_CACHE_OPERATIONS=false

# Mock configuration
MOCK_WEBGL_CONTEXT=true
MOCK_INDEXEDDB=true
MOCK_BROWSER_APIS=true
MOCK_NETWORK_REQUESTS=true

# Test artifact settings
TEST_RESULTS_DIR=./test-results
TEST_COVERAGE_DIR=./coverage
TEST_ARTIFACTS_RETENTION_DAYS=30